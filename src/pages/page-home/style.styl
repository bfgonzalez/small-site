:host
  display: block

// colors 
$grey = #292F36
$light-blue = #0090fc
$pink = #FF6B6B
$teal = #4ECDC4

// fonts 
$main-font = sans-serif 
  
// persistent navbar 
nav
  z-index: 1
  height: 3.5em
  width: 100%
  font-size: 1.3em
  font-family: $main-font
  line-height: 3.5em
  word-spacing: 1em
  padding: 1em
  position: fixed
  top: 0
  box-shadow: 0px 3px 3px rgba(0, 0, 0, 0.1)
  background: $teal
  display: table

// links  
a 
  text-decoration: none 
  color: white
  &:hover
    border-bottom: 2px solid white

#nav-links
  float: right
  margin-right: 2em

#menu-container 
  display: table-cell
  vertical-align middle

#menu-icon 
  color: white
  cursor: pointer
  font-weight lighter
  font-size 1.3em

#logo
  color: white
  word-spacing: 0
  font-size: 1.2em
  font-weight bold
  margin-left: -0.7em
   
#home 
  height: 100vh
  position: relative

#welcome-container 
  position: absolute
  top: 60%
  left: 50%
  transform: translate(-50%, -50%)
  & h1 
    font: lighter 1.7em $main-font
    color: $grey
    width: 10em

#about
  height: 100vh
  font-family: $main-font 
  background: $pink
  color: white
  position: relative

#about-container 
  position: absolute
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)
  & p 
    width: 16em
    font-size: 1em
    line-height: 1.5em

#work 
  height: auto
  background: white

#work-container 
  width: 98vw
  padding-top: 5em
  display: block
  margin: auto

.project-tile 
  max-height: 25em
  display: inline-block
  cursor: pointer

.project-tile:hover 
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19)

.project-name 
  margin: auto
  font-size: 1.2em
  font-family: $main-font
  text-align center
  color: $grey
  padding: 0.1em

// img thumbnails  
img 
  width: 100%

footer 
  height: 5em
  width: 100%
  color: white
  background: $grey
  font-size: 1.3em
  font-family: $main-font
  position: absolute
  display: table
  & a 
    display: table-cell
    vertical-align middle
    text-align: center 

// responsive grid layout 
* 
  box-sizing: border-box

.row::after 
  content: ""
  clear: both
  display: table

[class*="col-"] 
  float: left
  padding: 15px
  width: 100%

@media only screen and (min-width: 768px) 
  // For desktop
  .col-1 
    width: 8.33%
  .col-2 
    width: 16.66%
  .col-3  
    width: 25%
  .col-4 
    width: 33.33%
  .col-5 
    width: 41.66%
  .col-6 
    width: 50%
  .col-7 
    width: 58.33%
  .col-8 
    width: 66.66%
  .col-9 
    width: 75%
  .col-10 
    width: 83.33%
  .col-11 
    width: 91.66%
  .col-12 
    width: 100%


// media queries 
@media screen and (max-width: 768px) 
  #nav-links
    display: none

@media screen and (min-width: 425px)
  #logo 
    font-size: 1.5em

@media screen and (min-width: 600px)
  #welcome-container h1
    font-size: 2em
    width: 12em

  #about-container p
    width: 25em

@media screen and (min-width: 768px)
  #welcome-container h1
    font-size: 2.5em

  #about-container p
    font-size: 1.3em

@media screen and (min-width: 1024px)
  #welcome-container h1
    width: 25em
    text-align: center;

  #about-container p
   width: 30em

  
